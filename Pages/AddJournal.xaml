<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WayofLife.Pages.AddJournal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AddJournal">
    <ScrollView>
        <VerticalStackLayout Padding="35">
            <Label
                HorizontalOptions="Center"
                Text="New Journal"
                VerticalOptions="Center" />

            <VerticalStackLayout>
                <Entry x:Name="enTitle" Placeholder="Title" />

                <Entry x:Name="enContent" Placeholder="Content" />

                <Button
                    x:Name="BtnAddImages"
                    Clicked="BtnAddImages_Clicked"
                    Text="Add Images" />

                <Button
                    x:Name="BtnAddJournal"
                    Clicked="BtnAddJournal_Clicked"
                    Text="Add Journal" />

                <Label x:Name="lblimagePreview" />
                <Image x:Name="imagePreview" MaximumHeightRequest="700" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>